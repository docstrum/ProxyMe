@model IEnumerable<InstaSharp.Sample.Mvc.Models.WallElement>

@{
    ViewBag.Title = "My Feed";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>My Feed</title>
</head>
<body>

    <br />
    @foreach (var item in Model)
    {
        if (item.Location != null)
        {
            <div class=".col-md-4">
                <center>
                    <table border="0" width="600" cellpadding="10" cellspacing="0">
                        <tr>
                            <td width="100">
                                <img src="@item.ProfilePictureUrl" width="100" onclick="$.ajax(
                                                                                        {
                    url: '@Html.Raw(Url.Action("UserFeed","Home"))',
                    type: 'POST',
                    alert: ('@item.Username'),
                    data: {
                        usercode: '@item.Username'
                    },
                    success: function (data) {
                        $('#content').html(data);
                        $('#wait').hide();
                        $('#content').show();
                    }
                });" />
                            </td>
                            <td width="100">
                                User Name:
                                <br />
                                Full Name:
                                <br />
                                Posted:
                            </td>
                            <td width="200">
                                <b>@item.Username</b>
                                <br />
                                <b>@item.FullName</b>
                                <br />
                                <b>@item.CreatedTime.AddHours(-4)</b>
                            </td>
                            <td width="200">
                                Location: <b>@item.Location</b>
                                <br />
                                @item.Distance Miles Away
                                <br />
                                &nbsp;
                            </td>
                        </tr>
                        <tr>
                            <td colspan="4">
                                @if (string.IsNullOrWhiteSpace(item.VideoUrl))
                                {
                                    <img src="@item.StandardResolutionUrl" width="600" />
                                }
                                else
                                {

                                    <style>
                                        .image-wrap {
                                            position: relative;
                                            display: inline-block;
                                        }

                                        .play-button {
                                            position: absolute;
                                            width: 60px;
                                            height: 60px;
                                            background-color: rgba(0,0,0,0.25);
                                            border-radius: 100%;
                                            top: 50%;
                                            left: 50%;
                                            margin: -30px 0 0 -30px;
                                            cursor: pointer;
                                        }

                                            .play-button:after {
                                                content: '';
                                                display: block;
                                                position: absolute;
                                                left: 22px;
                                                top: 10px;
                                                border-width: 20px;
                                                border-style: solid;
                                                border-color: transparent transparent transparent white;
                                            }

                                            .play-button:hover {
                                                background-color: black;
                                            }
                                    </style>
                                    <div class="image-wrap">
                                        <a href="@item.VideoUrl" class="html5lightbox" data-width="600"  title="@item.Username">
                                            <img src="@item.StandardResolutionUrl" width="600" />
                                            <div class="play-button"></div>
                                        </a>
                                    </div>
                                }
                            </td>
                        </tr>
                    </table>
                    <br />
                </center>
            </div>
        }
        else
        {
            <div class=".col-md-4">
                <center>
                    <table border="0" width="600" cellpadding="10" cellspacing="0">
                        <tr>
                            <td width="100">
                                <img src="@item.ProfilePictureUrl" width="100" />
                            </td>
                            <td width="100">
                                User Name:
                                <br />
                                Full Name:
                                <br />
                                Posted:
                            </td>
                            <td width="200">
                                <b>@item.Username</b>
                                <br />
                                <b>@item.FullName</b>
                                <br />
                                <b>@item.CreatedTime.AddHours(-4)</b>
                            </td>
                            <td width="200">
                                <br />
                                <br />
                                <br />
                                <br />
                                &nbsp;
                            </td>
                        </tr>
                        <tr>
                            <td colspan="4">
                                @if (string.IsNullOrWhiteSpace(item.VideoUrl))
                                {
                                    <img src="@item.StandardResolutionUrl" width="600" />
                                }
                                else
                                {

                                    <style>
                                        .image-wrap {
                                            position: relative;
                                            display: inline-block;
                                        }

                                        .play-button {
                                            position: absolute;
                                            width: 60px;
                                            height: 60px;
                                            background-color: rgba(0,0,0,0.25);
                                            border-radius: 100%;
                                            top: 50%;
                                            left: 50%;
                                            margin: -30px 0 0 -30px;
                                            cursor: pointer;
                                        }

                                            .play-button:after {
                                                content: '';
                                                display: block;
                                                position: absolute;
                                                left: 22px;
                                                top: 10px;
                                                border-width: 20px;
                                                border-style: solid;
                                                border-color: transparent transparent transparent white;
                                            }

                                            .play-button:hover {
                                                background-color: black;
                                            }
                                    </style>
                                    <div class="image-wrap">
                                        <a href="@item.VideoUrl" class="html5lightbox" data-width="600" title="@item.Username">
                                            <img src="@item.StandardResolutionUrl" width="600" />
                                            <div class="play-button"></div>
                                        </a>
                                    </div>
                                }
                            </td>
                        </tr>
                    </table>
                    <br />
                </center>
            </div>
        }

    }

</body>
</html>
